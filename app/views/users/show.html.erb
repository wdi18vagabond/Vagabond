<h3>Profile</h3>
<h1>Hello, <%= @user.first_name %></h1>
<div>Current City: <%= @user.city %></div>

<%= image_tag gravatar_url(@user.email, 200), alt: "" %>
<p><%= @user.username %></p>
<p>Joined <%= @user.created_at.strftime("%B %Y") %><p>

<% if current_user == @user %>
  <%= link_to "Edit", edit_user_path(@user) %>
<% end %>

<% @user.stories.each do |s| %>
<div>
	<%= link_to s.title, story_path(s) %>
</div>
<br>
<% end %>
